@model KSociety.Com.Srv.Dto.Common.Model.Connection
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Areas/Common/Views/Shared/_CommonLayout.cshtml";
}
<br />
<h2 class="text-info">@(Model.ConnectionDto.Id != Guid.Empty ? "Edit" : "Create") Connection</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.ConnectionDto.Id != Guid.Empty)
        {
            <input type="hidden" asp-for="ConnectionDto.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ConnectionDto.AutomationTypeId"></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(m => Model.ConnectionDto.AutomationTypeId, new SelectList(Model.AutomationTypeId.List, "Key", "Value", Model.ConnectionDto.AutomationTypeId), htmlAttributes: new { @class = "form-control", id = "AutomationTypeId" })
            </div>
            <span asp-validation-for="ConnectionDto.AutomationTypeId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ConnectionDto.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="ConnectionDto.Name" class="form-control" />
            </div>
            <span asp-validation-for="ConnectionDto.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ConnectionDto.Ip"></label>
            </div>
            <div class="col-6">
                <input asp-for="ConnectionDto.Ip" class="form-control" />
            </div>
            <span asp-validation-for="ConnectionDto.Ip" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ConnectionDto.Enable"></label>
            </div>
            <div class="col-6">
                <input asp-for="ConnectionDto.Enable" class="form-control" />
            </div>
            <span asp-validation-for="ConnectionDto.Enable" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="ConnectionDto.WriteEnable"></label>
            </div>
            <div class="col-6">
                <input asp-for="ConnectionDto.WriteEnable" class="form-control" />
            </div>
            <span asp-validation-for="ConnectionDto.WriteEnable" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.ConnectionDto.Id != Guid.Empty ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}